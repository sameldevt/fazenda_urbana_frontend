@page
@model IndexModel
@{
    ViewData["Title"] = "Dados Pessoais";
}

<div class="container w-50 my-5">
    <h1 class="display-4 text-center">Dados Pessoais</h1>
    <div class="mt-3">
        <div class="mb-3">
            <label for="name" class="form-label">Nome</label>
            <input type="text" class="form-control" id="name" placeholder="" disabled>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" placeholder="" disabled>
        </div>
        <div class="mb-3">
            <label for="phone" class="form-label">Telefone</label>
            <input type="tel" class="form-control" id="phone" placeholder="" disabled>
        </div>
    </div>

    <div class="text-center mt-3">
        <button id="edit-button" class="btn primary-button-color">Editar</button>
        <button id="change-password-button" class="btn secondary-button-color">Alterar Senha</button>
    </div>
</div>

<script type="module" src="~/js/services/user/userData.js"></script>
