@page
@model IndexModel
@{
    ViewData["Title"] = "Formas de Pagamento";
}

<div class="container my-5 text-center">
    <h1 class="display-4">Formas de Pagamento</h1>
    <p class="text-muted">Realize o pagamento para prosseguir com a compra.</p>

    <div class="row mt-4">
        <!-- Cartão -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Cartão</h5>
                    <ul class="list-unstyled text-muted">
                        <li>Parcele em até 3x sem juros</li>
                        <li>Também aceitamos VA e VR</li>
                    </ul>
                    <button class="btn btn-dark">Selecionar</button>
                    <p class="mt-3 text-muted">Valor total<br>R$ XX,XX</p>
                </div>
            </div>
        </div>

        <!-- PIX -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">PIX</h5>
                    <ul class="list-unstyled text-muted">
                        <li>Frete Grátis a partir de R$ 50</li>
                        <li>Ganhe 5% de desconto</li>
                    </ul>
                    <button class="btn btn-dark">Selecionar</button>
                    <p class="mt-3 text-muted">Valor total<br>R$ XX,XX</p>
                </div>
            </div>
        </div>

        <!-- Boleto -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Boleto</h5>
                    <ul class="list-unstyled text-muted">
                        <li>Confirmação em até 1 dia útil</li>
                        <li>Favor nos enviar o comprovante</li>
                    </ul>
                    <button class="btn btn-dark">Selecionar</button>
                    <p class="mt-3 text-muted">Valor total<br>R$ XX,XX</p>
                </div>
            </div>
        </div>
    </div>
</div>