@page "{id}"
@model DetalhesModel
@{
    ViewData["Title"] = "Detalhes do Produto";
}

<div class="container my-5 d-flex justify-content-center">
    <div class="row w-75">
        <div class="col-md-6">
            <img id="product-image" src="" class="img-thumbnail w-80 h-auto" alt="Imagem do Produto" onerror="this.onerror=null;this.src='https://picsum.photos/200';">
        </div>

        <div class="col justify-content-between">
            <h2 id="product-name"></h2>
            <p id="product-description"></p>
            <div class="row">
                <div class="col-6">
                    <p class="me-3"><strong id="product-price"></strong></p>
                    <div class="d-flex align-items-center">
                        <label for="quantity">
                            <span style="white-space: nowrap;">Quantidade (kg)</span>
                        </label>
                        <div class="ms-2">
                            <input type="number" id="quantity" class="form-control" value="1.0" min="0.1" step="0.1">
                        </div>
                    </div>
                </div>
                <div class="col-6">
                   
                </div>
            </div>
            <div class="mt-5">
                <button class="btn primary-button-color  mb-2 w-100">Comprar</button>
                <button class="btn secondary-button-color mb-2 w-100" id="add-to-cart-btn">Adicionar ao carrinho</button>
            </div>
            </div>
        </div>
    </div>

    <div class="container my-5 d-flex justify-content-center">
    <div class="row w-75">
        <h4>Relacionados</h4>
        <div id="related-products-carousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner" id="related-products">
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#related-products-carousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Anterior</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#related-products-carousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Próximo</span>
            </button>

        </div>
    </div>
</div>


    <div class="modal fade" id="added-to-cart-modal" tabindex="-1" aria-labelledby="added-to-cart-modal-label" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="added-to-cart-modal-label">Item adicionado com sucesso!</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
          </div>
                <div class="modal-body" id="added-to-cart-modal-body">
          </div>
          <div class="modal-footer">
                <button type="button" class="btn secondary-button-color" data-bs-dismiss="modal">Fechar</button>
                <button type="button" class="btn primary-button-color" onclick="window.location.href = '/Carrinho/Listar';">Ver carrinho</button>
          </div>
        </div>
      </div>
    </div>
</div>

<script type="module" src="~/js/services/product/productDetails.js"></script>
