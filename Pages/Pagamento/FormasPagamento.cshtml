@page
@model IndexModel
@{
    ViewData["Title"] = "Formas de Pagamento";
}

<div class="container my-5 text-center">
    <h1 class="display-4">Formas de Pagamento</h1>
    <p class="text-muted">Escolha como deseja pagar seu pedido.</p>

    <div class="container d-flex justify-content-center gap-4 mt-4">
        <div class="col-md-4 h-100">
            <div class="card h-100 d-flex flex-column">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">PIX</h5>
                    <ul class="list-unstyled text-muted">
                        <li>Frete Grátis a partir de R$ 50</li>
                        <li>Ganhe 5% de desconto</li>
                    </ul>
                    <div class="mt-auto">
                        <button class="select-payment-method-button btn btn-success">Selecionar</button>
                        <p class="mt-3 text-muted">Valor total<br>R$ <span class="total-price-pix"></span></p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 h-100">
            <div class="card h-100 d-flex flex-column">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">Boleto</h5>
                    <ul class="list-unstyled text-muted">
                        <li>Frete Grátis a partir de R$ 50</li>
                        <li>Confirmação em até 1 dia útil</li>
                    </ul>
                    <div class="mt-auto">
                        <button class="select-payment-method-button btn btn-success">Selecionar</button>
                        <p class="mt-3 text-muted">Valor total<br>R$ <span class="total-price-boleto"></span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="module" src="~/js/services/payment/choosePaymentOption.js"></script>
</div>