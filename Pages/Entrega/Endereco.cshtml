@page
@model fazenda_test.Pages.Entrega.EnderecoModel
@{
    ViewData["Title"] = "Cadastrar endereço";
}
<div class="container my-5 w-50 justify-content-center">
    <h1 class="display-4 text-center">Endereço de Entrega</h1>
    <form id="address-form" class="mt-3">
        <div class="mb-3">
            <label for="street" class="form-label">Logradouro</label>
            <input type="text" class="form-control" id="street" placeholder="Rua das Flores">
        </div>
        <div class="mb-3">
            <label for="number" class="form-label">Número</label>
            <input type="text" class="form-control" id="number" placeholder="1000">
        </div>
        <div class="mb-3">
            <label for="complement" class="form-label">Complemento</label>
            <input type="text" class="form-control" id="complement" placeholder="Apto 31">
        </div>
        <div class="mb-3">
            <label for="zipCode" class="form-label">CEP</label>
            <input type="text" class="form-control" id="zipCode" placeholder="10101-010">
        </div>
        <div class="mb-3">
            <label for="city" class="form-label">Cidade</label>
            <input type="text" class="form-control" id="city" placeholder="São Paulo">
        </div>
        <div class="mb-3">
            <label for="state" class="form-label">Estado</label>
            <input type="text" class="form-control" id="state" placeholder="SP">
        </div>
        <div class="d-flex justify-content-center gap-3 mb-5">
            <button id="register-btn" type="button" class="btn primary-button-color">Cadastrar endereço</button>
            <button onclick="window.location.href = '/Carrinho/Listar';" id="back-to-cart-btn" type="button" class="btn secondary-button-color">Voltar ao carrinho</button>
        </div>
    </form>
</div>

<script type="module" src="~/js/services/delivery/createAddress.js"></script>
