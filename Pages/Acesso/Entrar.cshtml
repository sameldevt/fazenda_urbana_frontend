@page
@model IndexModel
@{
    ViewData["Title"] = "Entrar";
}

<div class="container my-5 w-50 justify-content-center text-center">
    <h1 class="display-4">Entrar</h1>
    <form id="login-form">
        <div class="mb-3 text-start">
            <label for="email" class="form-label">E-mail</label>
            <input type="email" class="form-control" id="email" placeholder="seunome@email.com" required>
        </div>
        <div class="mb-3 text-start">
            <label for="password" class="form-label">Senha</label>
            <input type="password" class="form-control" id="password" placeholder="********" required>
            <div class="form-text">
                <a asp-area="" asp-page="/Acesso/AlterarSenha">Esqueci minha senha.</a>
            </div>
        </div>
        <button type="submit" class="btn primary-button-color w-100">Acessar conta</button>
    </form>
    <div class="text-center mt-3">
        <span>Ainda n√£o tem cadastro? <a asp-area="" asp-page="/Acesso/Cadastro">Crie sua conta aqui.</a></span>
    </div>
</div>

<script type="module" src="~/js/services/access/login.js"></script>
