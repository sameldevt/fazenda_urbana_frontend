<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fazenda VerdeViva</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fazenda_test.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Fazenda VerdeViva</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Produtos">Produtos</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Contato">Contato</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark btn btn-light px-3" asp-area="" asp-page="/Cadastro">Cadastre-se</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light btn btn-dark px-3" asp-area="" asp-page="/Entrar">Entrar</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 d-flex justify-content-center">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="d-flex justify-content-around mt-2">
            <div class="d-flex flex-column">
                <div class="container">
                    <h5>Fazenda VerdeViva</h5>
                </div>
                <div class="container">
                    &copy; 2024 - Fazenda VerdeViva, Inc.
                </div>
                <div class="container">
                    <p>Todos os direitos reservados.</p>
                </div>
            </div>
            <div class="d-flex flex-column">
                <div class="container">
                    <h6>Nossa Fazenda Urbana</h6>
                </div>
                <div class="container">
                    <ul class="list-unstyled">
                        <li><a class="nav-link text-muted" asp-area="" asp-page="/Privacy">Como produzimos</a></li>
                        <li><a class="nav-link text-muted" asp-area="" asp-page="/Privacy">FAQ - Perguntas frequentes</a></li>
                    </ul>
                </div>
            </div>
            <div class="d-flex flex-column">
                <div class="container">
                    <h6>Faça seu pedido</h6>
                </div>
                <div class="container">
                    <ul class="list-unstyled">
                        <li><a class="nav-link text-muted" asp-area="" asp-page="/Privacy">Nossos produtos</a></li>
                        <li><a class="nav-link text-muted" asp-area="" asp-page="/Privacy">Fale conosco</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>